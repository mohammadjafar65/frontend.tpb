# public_html/.htaccess  (root site -> React build)
<IfModule mod_rewrite.c>
  Options -Indexes -MultiViews
  RewriteEngine On

  # Force HTTPS
  RewriteCond %{HTTPS} !=on
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

  # Send everything to /frontend/build first (no loop)
  RewriteCond %{REQUEST_URI} !^/frontend/build/
  RewriteRule ^(.*)$ /frontend/build/$1 [L]

  # If a real file/dir inside /frontend/build exists, serve it
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # SPA fallback
  RewriteRule ^ /frontend/build/index.html [L]
</IfModule>