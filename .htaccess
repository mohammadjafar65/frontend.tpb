<IfModule mod_rewrite.c>
  RewriteEngine On

  # ---------- HTTPS redirects ----------
  RewriteCond %{HTTPS} off
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

  # ---------- ROOT DOMAIN: frontend build ----------
  RewriteCond %{HTTP_HOST} ^(www\.)?thepilgrimbeez\.com$ [NC]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^ /frontend/build/index.html [L]

  # ---------- ADMIN SUBDOMAIN: static build folder ----------
  RewriteCond %{HTTP_HOST} ^admin\.thepilgrimbeez\.com$ [NC]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^ /tpb-admin/build/index.html [L]

  # ---------- DO NOT proxy API here; Passenger handles it ----------
  # (No rewrite rules for api.thepilgrimbeez.com in this file.)
</IfModule>
